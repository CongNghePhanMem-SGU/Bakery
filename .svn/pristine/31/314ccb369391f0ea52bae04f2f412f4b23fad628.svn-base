        private string KiemTraNhap()
        {
            string kq = "";
            if (txtMaLoai.Text.Trim() == "")
            {
                kq += "Mã loại không được rỗng!";
            }
            else
            {
                if (txtTenLoai.Text.Trim() == "")
                {
                    kq += "Phải nhập tên loại!";
                }
            }
            return kq;
        }


